<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TakiApp.UserControls.UserInfo">
  <ContentView.Content>
      <StackLayout>
            <ImageButton x:Name="Image" Clicked="Image_Clicked" Source="{Binding ProfileImage}" HeightRequest="30" WidthRequest="30"></ImageButton>
            <Label Text="{Binding Username}"></Label>
      </StackLayout>
  </ContentView.Content>
</ContentView>
<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TakiApp.UserControls.UserInfo">
  <ContentView.Content>
      <StackLayout>
            <Frame CornerRadius="25" WidthRequest="50" HeightRequest="50" Margin="0" Padding="0" IsClippedToBounds="True" HorizontalOptions="Center">
                <ImageButton Clicked="Image_Clicked"  Source="{Binding ProfileImage}" Aspect="AspectFit"></ImageButton>
            </Frame>
            <Label Text="{Binding Username}" FontSize="15" HorizontalOptions="Center"></Label>
      </StackLayout>
  </ContentView.Content>
</ContentView>
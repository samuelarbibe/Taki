<Page x:Class="Form.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Form"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoadingPage">

    <Grid>
        <TextBlock x:Name="status" HorizontalAlignment="Center" FontSize="40" TextWrapping="Wrap" Text="Searching for a Game..." VerticalAlignment="Center"/>
        <Button x:Name="SearchButton" Content="Search Again" HorizontalAlignment="Center" Margin="0,200,0,0" Height="50" Width="150" VerticalAlignment="Center" Click="SearchButton_Click" />
    </Grid>
</Page>

<Page x:Class="Form.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Form"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="1" Grid.Row="2" FontSize="25" Content="Username"/>
        <Label Grid.Column="1" Grid.Row="3"  FontSize="25" Content="First Name"/>
        <Label Grid.Column="1" Grid.Row="4"  FontSize="25" Content="Last Name"/>
        <Label Grid.Column="1" Grid.Row="5"  FontSize="25" Content="Level"/>
        <Label Grid.Column="1" Grid.Row="6"  FontSize="25" Content="Wins"/>
        <Label Grid.Column="1" Grid.Row="7"  FontSize="25" Content="Losses"/>

        <TextBlock Grid.Column="2" Grid.Row="2" FontSize="25" TextWrapping="Wrap" Text="{Binding Path=Username}"/>
        <TextBlock Grid.Column="2" Grid.Row="3" FontSize="25" TextWrapping="Wrap" Text="{Binding Path=FirstName}"/>
        <TextBlock Grid.Column="2" Grid.Row="4" FontSize="25" TextWrapping="Wrap" Text="{Binding Path=LastName}"/>
        <ProgressBar x:Name="LevelProgressBar" Grid.Column="2" Grid.Row="5" Minimum="0" Maximum="1000"/>
        <TextBlock Grid.Column="2" Grid.Row="5" FontSize="25" TextWrapping="Wrap" Text="{Binding Path=Level}" Margin="15,0,0,0"/>
        <TextBlock x:Name="ShowScore" Grid.Column="2" Grid.Row="5" FontSize="25" HorizontalAlignment="right" TextWrapping="Wrap" Margin="0,0,10,0" />
        <TextBlock Grid.Column="2" Grid.Row="6" FontSize="25" TextWrapping="Wrap" Text="{Binding Path=Wins}"/>
        <TextBlock Grid.Column="2" Grid.Row="7" FontSize="25" TextWrapping="Wrap" Text="{Binding Path=Losses}"/>
        <Button Grid.Row="0" Grid.Column="0" x:Name="Back" Content="Back" FontSize="25" Click="BackButton_Click"/>
        <Button Content="Logout" Grid.Column="3" Grid.Row="7" Click="Logout_Button_Click"/>
        <Button x:Name="AdminButton" Content="AdminButton" Grid.Column="3" Grid.Row="6" Click="Admin_Button_Click"/>

    </Grid>
</Page>
